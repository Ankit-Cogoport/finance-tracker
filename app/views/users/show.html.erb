<h2> User Details </h2>

<div class="card card-header results-block">
<table class="col-md-12">
<tbody>
<tr>
    <td><strong>Name :</strong> <%= @user.full_name %></td>
    <td><strong>Email :</strong> <%= @user.email %></td>
    <td><% if current_user.not_friends_with?(@user.id) %>
    <%= button_to 'Follow Friend?',friendships_path(friend: @user),class:"btn btn-xs btn-success",method: :post%>
    <% else %>
    <span >
    You are friends
    </span>
    <% end %></td>
</table \>
</tbody>
</tr>
</div>

<div>
<% if @tracked_stocks.present? %>
 <%= render 'stocks/list' %>
 <%else %>
<p class='lead'>THis user is not tracking any stocks </p>
<% end %>
</div>
